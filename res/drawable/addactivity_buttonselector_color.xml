<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/add_activity" />

            <stroke android:width="1dp" android:color="@color/addActivity_btn_startColor" />

            <corners android:radius="7dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <solid android:color="@color/add_activity" />

            <stroke android:width="1dp" android:color="@color/addActivity_btn_startColor" />

            <corners android:radius="7dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/add_activity" android:startColor="@color/addActivity_btn_startColor" />

            <stroke android:width="1dp" android:color="@color/addActivity_btn_startColor" />

            <corners android:radius="7dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>