<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/billManageActivity_lv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_small"
            android:ellipsize="end"
            android:ems="7"
            android:text="dasddasda"
            android:singleLine="true"
            android:textSize="@dimen/font_size_default" />

        <TextView
            android:id="@+id/billManageActivity_lv_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"     android:text="dasa"
            android:layout_alignTop="@+id/billManageActivity_lv_name"
            android:layout_marginLeft="@dimen/margin_size_small"
            android:layout_toRightOf="@+id/billManageActivity_lv_name"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/billManageActivity_lv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/billManageActivity_lv_name"     android:text="dasa"
            android:layout_alignLeft="@+id/billManageActivity_lv_sort"
            android:layout_below="@+id/billManageActivity_lv_sort"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/billManageActivity_lv_payOrIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_small"     android:text="dasd"
            android:layout_toRightOf="@+id/billManageActivity_lv_sort"
            android:textSize="@dimen/font_size_default" />

        <TextView
            android:id="@+id/currency_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/billManageActivity_lv_payOrIncome"      
            android:layout_toRightOf="@+id/billManageActivity_lv_payOrIncome"
            android:text="@string/currency_symbol" />

        <TextView
            android:id="@+id/billManageActivity_lv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/currency_symbol"
            android:ellipsize="end"     android:text="dasddasda"
            android:singleLine="true"
            android:textSize="@dimen/font_size_default" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/billManageActivity_lv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_small"     android:text="dasddasda"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/billManageActivity_lv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_small"     android:text="dasddasda"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>