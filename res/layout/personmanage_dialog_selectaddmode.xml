<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personManage_ll_addMode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/personManageActivity_btn_addContacts"
        style="@style/textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/personmanageactivity_buttonselector_color"
        android:text="@string/personManage_btn_addContacts" />

    <Button
        android:id="@+id/personManageActivity_btn_add"
        style="@style/textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/personmanageactivity_buttonselector_color"
        android:text="@string/personManage_btn_new" />

</LinearLayout>